@using DayBook.Web.ViewModels.Account
@model ReopenViewModel
@{
    ViewData["Title"] = "Re-open Account";
}

<div class="bg-primary panel-body">
    <h4>Re-open Account</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-3">
        <form asp-action="Reopen" method="post" class="form-horizontal" role="form">
            <input type="hidden" asp-for="Email" />
            <div class="input-group">
                <label asp-for="Email">@Html.DisplayFor(model => model.Email)</label>&nbsp;
                <button type="submit" class="btn btn-default alert-danger">Re-open</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

